<Page
    x:Class="WineCoolerUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WineCoolerUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="10,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="253"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="286,99,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="253"/>
        <TextBlock x:Name="lblUser" HorizontalAlignment="Left" Margin="12,22,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="71"/>
        <TextBlock x:Name="lblPassword" HorizontalAlignment="Left" Margin="12,79,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDevice" HorizontalAlignment="Left" Margin="10,164,0,0" TextWrapping="Wrap" Text="WineCooler" VerticalAlignment="Top" Width="253"/>
        <TextBlock x:Name="lblDevice" HorizontalAlignment="Left" Margin="12,144,0,0" TextWrapping="Wrap" Text="Device" VerticalAlignment="Top" Width="71"/>
        <Button x:Name="btnDevice" Content="Set" HorizontalAlignment="Left" Margin="286,164,0,0" VerticalAlignment="Top" Width="57" Click="btnDevice_Click"/>
        <ComboBox x:Name="cboWineType" HorizontalAlignment="Left" Margin="55,407,0,0" VerticalAlignment="Top" Width="242"/>
        <TimePicker HorizontalAlignment="Left" Margin="55,281,0,0" VerticalAlignment="Top" Time="17:30:0"/>
        <ComboBox x:Name="cboDuration" HorizontalAlignment="Left" Margin="55,343,0,0" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="55,256,0,0" TextWrapping="Wrap" Text="Serving Time" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="55,323,0,0" TextWrapping="Wrap" Text="Serving Duration" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="55,387,0,0" TextWrapping="Wrap" Text="Wine Type" VerticalAlignment="Top" Width="123"/>
        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="183,348,0,0" TextWrapping="Wrap" Text="hours" VerticalAlignment="Top" Width="114"/>
        <Button x:Name="btnWineSetup" Content="Apply" HorizontalAlignment="Left" Margin="133,471,0,0" VerticalAlignment="Top" Width="88" Click="btnDevice_Click"/>

    </Grid>
</Page>
